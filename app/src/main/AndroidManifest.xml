<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_orlando"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ThemeParksActivity"
                  android:label="Theme Parks"
                  android:parentActivityName=".MainActivity"/>
        <activity android:name=".ResortsActivity"
                  android:label="Resorts"
                  android:parentActivityName=".MainActivity"/>
        <activity android:name=".GolfActivity"
                  android:label="Golf Courses"
                  android:parentActivityName=".MainActivity"/>
        <activity android:name=".EntertainmentActivity"
                  android:label="Entertainment"
                  android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>